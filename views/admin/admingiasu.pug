    // HEADER DESKTOP
    // MAIN CONTENT
    .main-content
      .section__content.section__content--p30
        .container-fluid
          .row
            .col-md-12
              // DATA TABLE
              h3.title-5.m-b-35 Quản lý gia sư
              .table-data__tool
                
                .table-data__tool-right
                  a.button.au-btn.au-btn-icon.au-btn--green.au-btn--small(href='/admin/giasus/export')
                    i.zmdi.zmdi-plus
                    | Export 
                  
              .table-responsive.table-responsive-data2
                table.table.table-data2
                  thead
                    tr
                      th Tên 
                      th SDT
                      th Email
                      th Giới tính
                      th Năm sinh
                      th Trường học
                      th Nghành học
                      th T/G bắt đầu
                      th T/G kết thúc
                  tbody
                  each giasu in giasus
                    tr.tr-shadow
                      td= giasu.tengiasu
                      td= giasu.sdt
                      td.desc= giasu.email
                      if giasu.gioitinh
                        td Nam
                      else
                        td Nữ
                      td= giasu.namsinh
                      td= giasu.truonghoc
                      td= giasu.nghanhhoc
                      td= giasu.thoigianbatdau
                      td= giasu.thoigianketthuc
                      td
                        .table-data-feature
                          
                          a.button.item(href="/admin/giasus/delete/" + giasu._id ,  onclick="return confirm('Are you sure to delete this record ?');" ,data-toggle='tooltip', data-placement='top', title='Delete')
                            i.zmdi.zmdi-delete
                          
                    tr.spacer
              // END DATA TABLE
