            option(value='Lớp 7' ) L&#x1EDB;p 7
            option(value='Lớp 8' ) L&#x1EDB;p 8
            option(value='Lớp 9' ) L&#x1EDB;p 9
            option(value='Lớp 10') L&#x1EDB;p 10
            option(value='Lớp 11' ) L&#x1EDB;p 11
            option(value='Lớp 12' ) L&#x1EDB;p 12
        .form-group.col-md-6
          label Môn Học
          select.form-control.selectpicker(name='monhoc' id = 'monhoc' required)
            option(value='0') ---
            option(value='Toán' ) To&aacute;n
            option(value='Văn' ) V&abreve;n 
