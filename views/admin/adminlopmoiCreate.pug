doctype html
head
  title Education
  link(rel='stylesheet' href='/css/font-awesome.min.css')
  link(rel='stylesheet' href='/css/bootstrap.css')
.row
  .col-md-6.offset-md-3(style='background-color: #fff;margin-top: 25px;padding:20px;')
    h3 Đăng ký thuê gia sư
    form(action='/admin/lopmois/add', method='POST', autocomplete='off')
      input(type='hidden', name='id', value= lophoc ? lophoc._id : '')

      
      .form-group
        label Họ tên
        input.form-control(type='text', name='tenphuhuynh', placeholder='', value= lophoc ? lophoc.tenphuhuynh : '' required)
        .text-danger
          |
      .form-group
        label SDT
        input.form-control(type='text', name='sdt', placeholder='', value= lophoc ? lophoc.sdt : '' required)
        .text-danger
          | 
      .form-row
        .form-group.col-md-6
          label Địa chi
          input.form-control(type='text', name='diachi', placeholder='Số nhà - Đường - Quận - Thành Phố', value= lophoc ? lophoc.diachi : ''  required)
        .form-group.col-md-6
          label Email
          input.form-control(type='text', name='diachiemail', placeholder='hieudao03021999@gmail.com', value= lophoc ? lophoc.diachiemail : '' required)

      .form-row
        .form-group.col-md-6
          label Lớp Học
