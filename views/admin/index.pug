                    tr
                      th ID
                      th Tên 
                      th SDT
                      th Email
                      th Địa chỉ
                      th Gia Sư
                      th Môn học
                      th Số buổi
                      th Thời gian
                      th Ca học
                  tbody
                  each lophoc in lophocs
                    tr.tr-shadow
                      td= lophoc._id
                      td= lophoc.tenphuhuynh
                      td= lophoc.sdt
                        
                      td.desc= lophoc.diachiemail
                      td= lophoc.diachi
                      td
                        span.status--process= lophoc.giasu
                      td= lophoc.lophoc + ' -'+ lophoc.monhoc
                      
                      td= lophoc.sobuoi
                      td= lophoc.thoigian
                      td= lophoc.buoicothehoc
                      td
                        .table-data-feature
                          a.button.item( href= '/admin/lophocs/edit/'+ lophoc._id ,data-toggle='tooltip', data-placement='top', title='Edit')
                            i.zmdi.zmdi-edit
                          a.button.item( href='/admin/lophocs/delete'+ lophoc._id ,onclick="return confirm('Are you sure to delete this record ?');" ,data-toggle='tooltip', data-placement='top', title='Delete')
                            i.zmdi.zmdi-delete
                          
